{% extends 'base.html.twig' %}

{% block title %}Détails du vol - {{ ticket.departureCity }} vers {{ ticket.arrivalCity }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .booking-card {
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    .flight-timeline {
        position: relative;
        padding-left: 30px;
    }
    .flight-timeline::before {
        content: '';
        position: absolute;
        left: 10px;
        top: 20px;
        bottom: 20px;
        width: 2px;
        background: linear-gradient(to bottom, #0d6efd, #198754);
    }
    .departure-point::before, .arrival-point::before {
        content: '';
        position: absolute;
        left: 0;
        width: 20px;
        height: 20px;
        border-radius: 50%;
    }
    .departure-point::before {
        background-color: #0d6efd;
    }
    .arrival-point::before {
        background-color: #198754;
    }
    .ticket-badge {
        font-size: 0.9rem;
    }
    .weather-card {
        border-radius: 10px;
        background: linear-gradient(135deg, #e0f7fa, #b2ebf2);
    }
    .weather-icon {
        width: 50px;
        height: 50px;
    }
</style>
{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div>
                            <h2 class="h3 mb-1">
                                {{ ticket.departureCity }} <i class="fas fa-arrow-right mx-2 text-muted"></i> {{ ticket.arrivalCity }}
                            </h2>
                            <p class="text-muted mb-0">
                                {{ ticket.airline }} • Vol #{{ ticket.flightNumber }} • {{ ticket.ticketType }}
                            </p>
                        </div>
                        <span class="badge bg-{{ ticket.ticketClass == 'First' ? 'primary' : ticket.ticketClass == 'Business' ? 'warning text-dark' : 'success' }} ticket-badge">
                            {{ ticket.ticketClass }}
                        </span>
                    </div>

                    <div class="flight-timeline mb-4">
                        <div class="departure-point mb-4 position-relative">
                            <h5 class="h5 mb-1">Départ</h5>
                            <p class="mb-1"><i class="far fa-calendar-alt text-primary me-2"></i> {{ ticket.departureDate|date('l d F Y') }}</p>
                            <p class="mb-0"><i class="far fa-clock text-primary me-2"></i> {{ ticket.departureTime }}</p>
                            <p class="text-muted mt-2"><i class="fas fa-map-marker-alt me-2"></i> {{ ticket.departureCity }}</p>
                        </div>

                        <div class="arrival-point position-relative">
                            <h5 class="h5 mb-1">Arrivée</h5>
                            <p class="mb-1"><i class="far fa-calendar-alt text-success me-2"></i> {{ ticket.arrivalDate|date('l d F Y') }}</p>
                            <p class="mb-0"><i class="far fa-clock text-success me-2"></i> {{ ticket.arrivalTime }}</p>
                            <p class="text-muted mt-2"><i class="fas fa-map-marker-alt me-2"></i> {{ ticket.arrivalCity }}</p>
                        </div>
                    </div>

                    {% if weather %}
                    <div class="card weather-card mb-4 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Météo à {{ ticket.arrivalCity }}</h5>
                            <div class="d-flex align-items-center">
                                <img src="http://openweathermap.org/img/wn/{{ weather.weather[0].icon }}@2x.png" class="weather-icon me-3" alt="{{ weather.weather[0].description }}">
                                <div>
                                    <p class="mb-1"><strong>{{ weather.main.temp }}°C</strong> - {{ weather.weather[0].description|capitalize }}</p>
                                    <p class="mb-0 text-muted">Humidité: {{ weather.main.humidity }}% | Vent: {{ weather.wind.speed }} m/s</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% else %}
                    <div class="alert alert-warning mb-4">
                        <i class="fas fa-exclamation-triangle me-2"></i> Impossible de récupérer les données météo pour {{ ticket.arrivalCity }}.
                    </div>
                    {% endif %}

                    {% if ticket.cityImage %}
                    <div class="mb-4">
                        <img src="{{ asset('uploads/cities/' ~ ticket.cityImage) }}" class="img-fluid rounded" alt="{{ ticket.arrivalCity }}">
                        <p class="text-center text-muted small mt-2">Vue de {{ ticket.arrivalCity }}</p>
                    </div>
                    {% endif %}

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i> Annulation gratuite jusqu'à 24h avant le départ
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card booking-card border-0 shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-primary text-white">
                    <h4 class="h5 mb-0">
                        <i class="fas fa-shopping-cart me-2"></i> Votre réservation
                    </h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span>Prix du billet</span>
                        <span class="fw-bold">{{ ticket.price }} €</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span>Frais de service</span>
                        <span class="fw-bold">9.99 €</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <span class="h5 mb-0">Total</span>
                        <span class="h4 fw-bold text-primary">{{ ticket.price + 9.99 }} €</span>
                    </div>

                    <form id="bookingForm">
                        <div class="mb-3">
                            <label for="passengers" class="form-label">Nombre de passagers</label>
                            <select class="form-select" id="passengers">
                                <option value="1">1 passager</option>
                                <option value="2" selected>2 passagers</option>
                                <option value="3">3 passagers</option>
                                <option value="4">4 passagers</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-credit-card me-2"></i> Payer maintenant
                        </button>
                    </form>

                    <div class="text-center mt-3">
                        <small class="text-muted">
                            <i class="fas fa-lock me-1"></i> Paiement sécurisé
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Gestion du formulaire de réservation
    const bookingForm = document.getElementById('bookingForm');
    if (bookingForm) {
        bookingForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Simulation de réservation réussie
            Swal.fire({
                title: 'Réservation confirmée!',
                text: 'Votre vol a été réservé avec succès. Vous allez recevoir un email de confirmation.',
                icon: 'success',
                confirmButtonText: 'OK'
            }).then(() => {
                window.location.href = "{{ path('app_client_tickets_index') }}";
            });
        });
    }
});
</script>
{% endblock %}