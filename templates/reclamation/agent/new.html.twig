{% extends 'base.html.twig' %}

{% block title %}Nouvelle Réclamation (Agent){% endblock %}

{% block body %}
<div class="section bg-light py-5">
  <div class="container">

    <div class="row justify-content-between align-items-center mb-4">
      <div class="col-lg-6">
        <h2 class="heading mb-0">➕ Nouvelle Réclamation</h2>
      </div>
      <div class="col-lg-3 text-end">
        <a href="{{ path('reclamation_index') }}" class="btn btn-outline-secondary rounded-pill">
          ↩️ Retour
        </a>
      </div>
    </div>

    {# ✅ Messages flash #}
    {% for message in app.flashes('success') %}
      <div class="alert alert-success text-center rounded-pill">{{ message }}</div>
    {% endfor %}
    {% for message in app.flashes('error') %}
      <div class="alert alert-danger text-center rounded-pill">{{ message }}</div>
    {% endfor %}

    <div class="card p-4 shadow-sm">
      {% include 'reclamation/agent/form.html.twig' with { form: form, button_label: '✅ Envoyer' } %}
    </div>

  </div>
</div>
{% endblock %}
