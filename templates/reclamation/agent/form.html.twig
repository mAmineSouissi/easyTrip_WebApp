{{ form_start(form) }}

<div class="mb-3">
  {{ form_label(form.category, 'Catégorie') }}
  {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
  {{ form_errors(form.category) }}
</div>

<div class="mb-3">
  {{ form_label(form.issue, 'Problème') }}
  {{ form_widget(form.issue, {'attr': {'class': 'form-control', 'maxlength': '50'}}) }}
  {{ form_errors(form.issue) }}
</div>

{% if form.status is defined %}
  <div class="mb-3">
    {{ form_label(form.status, 'Statut') }}
    {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
    {{ form_errors(form.status) }}
  </div>
{% endif %}

{% if form.date is defined %}
  <div class="mb-3">
    {{ form_label(form.date, 'Date de la réclamation') }}
    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.date) }}
  </div>
{% endif %}

<div class="text-center mt-4">
  <button class="btn btn-warning rounded-pill px-4 py-2">
    {{ button_label|default('✅ Enregistrer') }}
  </button>
</div>

{{ form_end(form) }}
