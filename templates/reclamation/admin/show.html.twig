{% extends 'base.html.twig' %}

{% block title %}Détail Réclamation (Admin){% endblock %}

{% block body %}
<div class="section bg-light py-5">
  <div class="container">

    <div class="row justify-content-between align-items-center mb-4">
      <div class="col-lg-6">
        <h2 class="heading"><i class="fa fa-eye"></i> Détail de la Réclamation</h2>
      </div>
      <div class="col-lg-3 text-end">
        <a href="{{ path('reclamation_index') }}" class="btn btn-primary">
          ↩️ Retour à la liste
        </a>
      </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4">
      <div class="card-body">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <strong>📂 Catégorie :</strong> {{ reclamation.category }}
          </li>
          <li class="list-group-item">
            <strong>📝 Problème :</strong> {{ reclamation.issue }}
          </li>
          <li class="list-group-item">
            <strong>⏳ Statut :</strong> {{ reclamation.status }}
          </li>
          <li class="list-group-item">
            <strong>📅 Date :</strong> {{ reclamation.date ? reclamation.date|date('Y-m-d') : '—' }}
          </li>
          <li class="list-group-item">
            <strong>👤 Utilisateur :</strong> {{ reclamation.userid.email }}
          </li>
        </ul>
      </div>
    </div>

  </div>
</div>
{% endblock %}
