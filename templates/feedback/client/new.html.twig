{% extends 'base.html.twig' %}

{% block title %}Ajouter un Feedback{% endblock %}

{% block body %}
<div class="section bg-light">
  <div class="container">

    {% for message in app.flashes('success') %}
      <div class="alert alert-success text-center">{{ message }}</div>
    {% endfor %}

    {% for message in app.flashes('error') %}
      <div class="alert alert-danger text-center">{{ message }}</div>
    {% endfor %}

    <div class="row justify-content-between align-items-center mb-4">
      <div class="col-lg-6">
        <h2 class="heading"><i class="fa fa-plus-circle"></i> Ajouter un Feedback</h2>
      </div>
      <div class="col-lg-3 text-end">
        <a href="{{ path('feedback_index') }}" class="btn btn-outline-secondary">
          ‚¨ÖÔ∏è Retour √† la liste
        </a>
      </div>
    </div>

    <div class="card p-4 shadow-sm">
      {{ form_start(form) }}

        <div class="mb-3">
          {{ form_label(form.message) }}
          {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
          {{ form_errors(form.message) }}
        </div>

        <div class="mb-3">
          {{ form_label(form.rating) }}
          {{ form_widget(form.rating) }}
          {{ form_errors(form.rating) }}
        </div>

        <div class="mb-3">
          <label class="form-label">Offre li√©e</label>
          <div class="form-control bg-light">
            {% if feedback.hotel %}
              üè® H√¥tel : {{ feedback.hotel.name }}
            {% elseif feedback.ticket %}
              ‚úàÔ∏è Ticket : {{ feedback.ticket.flightNumber }}
            {% elseif feedback.travel %}
              üß≥ Voyage : {{ feedback.travel.destination }}
            {% else %}
              ‚ùå Aucune offre li√©e
            {% endif %}
          </div>
        </div>

        <div class="text-center mt-4">
          <button type="submit" class="btn btn-success px-4 py-2">
            ‚úÖ Envoyer
          </button>
        </div>

      {{ form_end(form) }}
    </div>

  </div>
</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      {% for message in app.flashes('success') %}
        alert("{{ message }}");
      {% endfor %}

      {% for message in app.flashes('error') %}
        alert("{{ message }}");
      {% endfor %}
    });
  </script>
{% endblock %}
