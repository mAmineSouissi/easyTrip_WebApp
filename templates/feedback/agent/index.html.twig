  </div>
</div>

<!-- âœ… SCRIPT GLOBAL SEARCH + PAGINATION -->
<script>
  function setupSearchAndPagination(searchInputId, sectionIds, paginationIds, itemsPerPage = 2) {
    const searchInput = document.getElementById(searchInputId);

    function getFilteredItems(container, query) {
      return Array.from(container.querySelectorAll('.card')).filter(card =>
        card.innerText.toLowerCase().includes(query)
      );
    }

    function showPage(container, pagination, items, page) {
      const totalPages = Math.ceil(items.length / itemsPerPage);
      container.querySelectorAll('.card').forEach(card => card.style.display = 'none');
      items.forEach((card, index) => {
        if (index >= (page - 1) * itemsPerPage && index < page * itemsPerPage) {
          card.style.display = 'block';
        }
      });

      renderPagination(pagination, totalPages, (newPage) => {
        showPage(container, pagination, items, newPage);
      });
    }

    function renderPagination(pagination, totalPages, onPageClick) {
      pagination.innerHTML = '';
      for (let i = 1; i <= totalPages; i++) {
        const btn = document.createElement('button');
        btn.textContent = i;
        btn.className = 'btn btn-sm mx-1 ' + (i === 1 ? 'btn-primary text-white' : 'btn-outline-dark');
        btn.addEventListener('click', () => onPageClick(i));
        pagination.appendChild(btn);
      }
    }

    function applySearch() {
      const query = searchInput.value.toLowerCase();
      sectionIds.forEach((sectionId, index) => {
        const container = document.getElementById(sectionId);
        const pagination = document.getElementById(paginationIds[index]);
        const filteredItems = getFilteredItems(container, query);
        showPage(container, pagination, filteredItems, 1);
      });
    }

    searchInput.addEventListener('input', applySearch);
    applySearch(); // Initial
  }

  document.addEventListener('DOMContentLoaded', function () {
    setupSearchAndPagination(
      'global-search',
      ['hotel-list', 'ticket-list', 'travel-list'],
      ['hotel-pagination', 'ticket-pagination', 'travel-pagination'],
      2
    );
  });
</script>
{% endblock %}
