{% extends 'base.html.twig' %}

{% block title %}Détail du Feedback - Agent{% endblock %}

{% block body %}
<div class="section bg-light">
  <div class="container">

    <div class="row justify-content-between align-items-center mb-4">
      <div class="col-lg-6">
        <h2 class="heading"><i class="fa fa-comment-dots"></i> Détail du Feedback</h2>
      </div>
      <div class="col-lg-3 text-end">
        <a href="{{ path('feedback_index') }}" class="btn btn-primary">
          ← Retour à la liste
        </a>
      </div>
    </div>

    <div class="table-responsive">
      <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark text-center">
          <tr>
            <th>Message</th>
            <th>Note</th>
            <th>Date</th>
            <th>Ticket</th>
            <th>Hôtel</th>
            <th>Offre de Voyage</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>{{ feedback.message }}</td>
            <td>{{ feedback.rating }}/5</td>
            <td>{{ feedback.date ? feedback.date|date('Y-m-d') : '—' }}</td>
            <td>{{ feedback.ticket ? feedback.ticket.flightNumber : (feedback.ticketId ?? '—') }}</td>
            <td>{{ feedback.hotel ? feedback.hotel.name : (feedback.hotelId ?? '—') }}</td>
            <td>{{ feedback.travel ? feedback.travel.destination : (feedback.travelId ?? '—') }}</td>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>
{% endblock %}