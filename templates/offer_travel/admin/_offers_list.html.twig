{# templates/offer_travel/_offers_list.html.twig #}
<div class="row" id="offersContainer">
    {% for offer in offer_travels %}
        <div class="col-md-4 mb-4">
            <div class="card offer-card {% if offer.promotion %}highlight-promo{% endif %}">
                {% if offer.image %}
                    <img src="{{ offer.image }}" alt="{{ offer.destination }}" class="offer-image">
                {% else %}
                    <div class="offer-image bg-light d-flex align-items-center justify-content-center">
                        <i class="fas fa-image fa-3x text-muted"></i>
                    </div>
                {% endif %}
                <div class="card-body">
                    <span class="badge-category {{ offer.category|lower }}">{{ offer.category }}</span>
                    <h5 class="offer-title">{{ offer.destination }}</h5>
                    <div class="offer-price">
                        {{ offer.price }} €
                        {% if offer.promotion %}
                            <small class="text-muted" style="text-decoration: line-through;">
                                {{ (offer.price / (1 - offer.promotion.discountPercentage / 100))|round(2) }} €
                            </small>
                            <span class="badge bg-danger">
                                -{{ offer.promotion.discountPercentage }}%
                            </span>
                        {% endif %}
                    </div>
                    <p class="offer-date">
                        <i class="fas fa-calendar-alt"></i> 
                        {{ offer.departureDate|date('d/m/Y') }} - {{ offer.arrivalDate|date('d/m/Y') }}
                    </p>
                    <p>{{ offer.discription|slice(0, 100) }}...</p>
                    
                    <div class="action-buttons">
                        <a href="{{ path('app_offer_travel_action', {'action': 'offer', 'id': offer.id}) }}" class="btn btn-detail">                            <i class="fas fa-eye"></i> Détails
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="col-12">
            <div class="no-offers">
                <i class="fas fa-plane-slash fa-3x mb-3"></i>
                <h4>Aucune offre disponible actuellement</h4>
                <p>Essayez de modifier vos critères de recherche</p>
            </div>
        </div>
    {% endfor %}
</div>