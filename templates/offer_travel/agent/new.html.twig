{% extends 'base.html.twig' %}

{% block title %}Nouvelle Offre de Voyage{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        .offer-form-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }
        .form-header {
            text-align: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #eee;
        }
        .form-title {
            color: #2c3e50;
            font-weight: 700;
            margin: 0;
        }
        .form-group {
            margin-bottom: 1.5rem;
        }
        .form-control {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid #e1e5eb;
            border-radius: 5px;
        }
        .form-control:focus {
            border-color: #4361ee;
            box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.2);
        }
        .btn-submit {
            background-color: #2dce89;
            color: white;
            padding: 0.875rem 1.75rem;
            border: none;
            border-radius: 5px;
            font-weight: 600;
        }
        .btn-submit:hover {
            background-color: #24b47e;
        }
        .back-link {
            display: inline-flex;
            align-items: center;
            color: #6c757d;
            margin-top: 1.5rem;
            text-decoration: none;
        }
        .back-link:hover {
            color: #4361ee;
        }
        .file-input-label {
            display: inline-flex;
            align-items: center;
            background-color: #3498db;
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            cursor: pointer;
            margin-bottom: 10px;
            transition: background-color 0.3s;
        }
        .file-input-label:hover {
            background-color: #2980b9;
        }
        .file-input-label i {
            margin-right: 0.5rem;
        }
        #offer_travel_imageFile {
            display: none;
        }
        .image-preview {
            max-width: 200px;
            max-height: 200px;
            margin-top: 10px;
            display: none;
            border-radius: 5px;
        }
        .form-error {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
        .is-invalid {
            border-color: #dc3545 !important;
        }
        .invalid-feedback {
            display: none;
            width: 100%;
            margin-top: 0.25rem;
            font-size: 0.875em;
            color: #dc3545;
        }
        .was-validated .form-control:invalid ~ .invalid-feedback,
        .was-validated .form-control:invalid ~ .invalid-tooltip,
        .form-control.is-invalid ~ .invalid-feedback,
        .form-control.is-invalid ~ .invalid-tooltip {
            display: block;
        }
        .was-validated .form-control:invalid,
        .form-control.is-invalid {
            border-color: #dc3545;
            padding-right: calc(1.5em + 0.75rem);
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 12 12' width='12' height='12' fill='none' stroke='%23dc3545'%3e%3ccircle cx='6' cy='6' r='4.5'/%3e%3cpath stroke-linejoin='round' d='M5.8 3.6h.4L6 6.5z'/%3e%3ccircle cx='6' cy='8.2' r='.6' fill='%23dc3545' stroke='none'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right calc(0.375em + 0.1875rem) center;
            background-size: calc(0.75em + 0.375rem) calc(0.75em + 0.375rem);
        }
    </style>
{% endblock %}

{% block body %}
<div class="offer-form-container">
    <div class="form-header">
        <h1 class="form-title">
            <i class="fas fa-plane"></i> Créer une nouvelle offre
        </h1>
    </div>

    {{ form_start(form, {'attr': {'id': 'create-offer-form', 'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
        {{ form_errors(form) }}
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.departure) }}
                    {{ form_widget(form.departure, {
                        'attr': {
                            'class': 'form-control',
                            'minlength': '2',
                            'maxlength': '255',
                            'pattern': '^[a-zA-Z\s\-]+$',
                            'required': 'required'
                        }
                    }) }}
                    <div class="invalid-feedback">
                        Veuillez entrer un lieu de départ valide (lettres, espaces et tirets seulement, 2-255 caractères).
                    </div>
                    {{ form_errors(form.departure) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.destination) }}
                    {{ form_widget(form.destination, {
                        'attr': {
                            'class': 'form-control',
                            'minlength': '2',
                            'maxlength': '255',
                            'pattern': '^[a-zA-Z\s\-]+$',
                            'required': 'required'
                        }
                    }) }}
                    <div class="invalid-feedback">
                        Veuillez entrer une destination valide (lettres, espaces et tirets seulement, 2-255 caractères).
                    </div>
                    {{ form_errors(form.destination) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.departure_date) }}
                    {{ form_widget(form.departure_date, {
                        'attr': {
                            'class': 'form-control',
                            'min': 'today',
                            'required': 'required'
                        }
                    }) }}
                    <div class="invalid-feedback">
                        La date de départ doit être aujourd'hui ou dans le futur.
                    </div>
                    {{ form_errors(form.departure_date) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.arrival_date) }}
                    {{ form_widget(form.arrival_date, {
                        'attr': {
                            'class': 'form-control',
                            'required': 'required'
                        }
                    }) }}
                    <div class="invalid-feedback">
                        La date d'arrivée doit être après la date de départ.
                    </div>
                    {{ form_errors(form.arrival_date) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.hotel_name) }}
                    {{ form_widget(form.hotel_name, {
                        'attr': {
                            'class': 'form-control',
                            'minlength': '2',
                            'maxlength': '255',
                            'required': 'required'
                        }
                    }) }}
                    <div class="invalid-feedback">
                        Veuillez entrer un nom d'hôtel valide (2-255 caractères).
                    </div>
                    {{ form_errors(form.hotel_name) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.category) }}
                    {{ form_widget(form.category, {
                        'attr': {
                            'class': 'form-control',
                            'required': 'required'
                        }
                    }) }}
                    <div class="invalid-feedback">
                        Veuillez sélectionner une catégorie.
                    </div>
                    {{ form_errors(form.category) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.price) }}
                    <div class="input-group">
                        {{ form_widget(form.price, {
                            'attr': {
                                'class': 'form-control original-price',
                                'min': '0.01',
                                'max': '99999.99',
                                'step': '0.01',
                                'required': 'required'
                            }
                        }) }}
                        <span class="input-group-text">€</span>
                    </div>
                    <div class="invalid-feedback">
                        Le prix doit être compris entre 0.01 et 99999.99 €.
                    </div>
                    {{ form_errors(form.price) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.imageFile) }}
                    <label for="offer_travel_imageFile" class="file-input-label">
                        <i class="fas fa-image"></i> Choisir une image
                    </label>
                    {{ form_widget(form.imageFile, {
                        'attr': {
                            'accept': 'image/jpeg,image/png',
                            'required': 'required'
                        }
                    }) }}
                    <div class="invalid-feedback">
                        Veuillez sélectionner une image valide (JPEG ou PNG, max 2Mo).
                    </div>
                    <img id="imagePreview" src="#" alt="Aperçu de l'image" class="image-preview">
                    {{ form_errors(form.imageFile) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.flight_name) }}
                    {{ form_widget(form.flight_name, {
                        'attr': {
                            'class': 'form-control',
                            'minlength': '2',
                            'maxlength': '255',
                            'required': 'required'
                        }
                    }) }}
                    <div class="invalid-feedback">
                        Veuillez entrer un nom de vol valide (2-255 caractères).
                    </div>
                    {{ form_errors(form.flight_name) }}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.agency) }}
                    {{ form_widget(form.agency, {
                        'attr': {
                            'class': 'form-control',
                            'required': 'required'
                        }
                    }) }}
                    <div class="invalid-feedback">
                        Veuillez sélectionner une agence.
                    </div>
                    {{ form_errors(form.agency) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.promotion) }}
                    {{ form_widget(form.promotion, {
                        'attr': {
                            'class': 'form-control promotion-select'
                        }
                    }) }}
                    {{ form_errors(form.promotion) }}
                </div>
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.discription) }}
            {{ form_widget(form.discription, {
                'attr': {
                    'class': 'form-control',
                    'minlength': '10',
                    'maxlength': '2000',
                    'required': 'required'
                }
            }) }}
            <div class="invalid-feedback">
                La description doit contenir entre 10 et 2000 caractères.
            </div>
            {{ form_errors(form.discription) }}
        </div>

        <button type="submit" class="btn-submit">
            <i class="fas fa-save"></i> Créer l'offre
        </button>
    {{ form_end(form) }}

    <a href="{{ path('app_offer_travel_index') }}" class="back-link">
        <i class="fas fa-arrow-left"></i> Retour à la liste
    </a>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Validation Bootstrap côté client
            (function() {
                'use strict';
                
                const form = document.getElementById('create-offer-form');
                
                if (form) {
                    form.addEventListener('submit', function(event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        
                        form.classList.add('was-validated');
                    }, false);
                }
            })();

            // Gestion de la prévisualisation de l'image
            const imageInput = document.getElementById('offer_travel_imageFile');
            const imagePreview = document.getElementById('imagePreview');
            
            if (imageInput && imagePreview) {
                imageInput.addEventListener('change', function(event) {
                    const file = event.target.files[0];
                    
                    if (file) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            imagePreview.src = e.target.result;
                            imagePreview.style.display = 'block';
                        }
                        reader.readAsDataURL(file);
                    } else {
                        imagePreview.style.display = 'none';
                    }
                });
            }

            // Gestion des promotions et calcul du prix
            const promotionSelect = document.querySelector('.promotion-select');
            const priceInput = document.querySelector('.original-price');
            
            if (promotionSelect && priceInput) {
                let originalPrice = parseFloat(priceInput.value) || 0;
                
                // Stocker le prix original dans l'attribut data
                priceInput.setAttribute('data-original-price', originalPrice);
                
                // Écouter les changements de promotion
                promotionSelect.addEventListener('change', function() {
                    const selectedOption = this.options[this.selectedIndex];
                    const discount = selectedOption ? parseFloat(selectedOption.getAttribute('data-discount')) || 0 : 0;
                    
                    // Mettre à jour le prix affiché
                    originalPrice = parseFloat(priceInput.getAttribute('data-original-price')) || parseFloat(priceInput.value) || 0;
                    if (discount > 0) {
                        const discountedPrice = originalPrice * (1 - discount / 100);
                        priceInput.value = discountedPrice.toFixed(2);
                    } else {
                        priceInput.value = originalPrice.toFixed(2);
                    }
                });
                
                // Écouter les changements manuels du prix
                priceInput.addEventListener('input', function() {
                    // Mettre à jour le prix original uniquement si aucune promotion n'est sélectionnée
                    if (!promotionSelect.value) {
                        originalPrice = parseFloat(this.value) || 0;
                        this.setAttribute('data-original-price', originalPrice);
                    }
                });
                
                // Déclencher le calcul initial si une promotion est déjà sélectionnée
                if (promotionSelect.value) {
                    promotionSelect.dispatchEvent(new Event('change'));
                }
            }

            // Validation des dates
            const departureDateInput = document.getElementById('offer_travel_departure_date');
            const arrivalDateInput = document.getElementById('offer_travel_arrival_date');
            
            if (departureDateInput && arrivalDateInput) {
                departureDateInput.addEventListener('change', function() {
                    if (this.value) {
                        arrivalDateInput.min = this.value;
                    }
                });
            }

            // Gestion des messages flash
            {% for type, messages in app.flashes %}
                {% for message in messages %}
                    Swal.fire({
                        icon: '{{ type }}',
                        title: '{{ message|raw }}',
                        showConfirmButton: true,
                        timer: {{ type == 'error' ? 'null' : '1500' }}
                    }).then(() => {
                        {% if type == 'success' %}
                            window.location.href = "{{ path('app_offer_travel_index') }}";
                        {% endif %}
                    });
                {% endfor %}
            {% endfor %}
        });
    </script>
{% endblock %}