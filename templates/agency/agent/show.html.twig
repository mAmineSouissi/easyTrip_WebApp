{% extends 'base.html.twig' %}

{% block title %}Détails de l'agence - {{ agency.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .agency-detail-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }
        .detail-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #eee;
        }
        .detail-title {
            color: #2c3e50;
            font-weight: 700;
            margin: 0;
        }
        .agency-card {
            display: flex;
            margin-bottom: 2rem;
        }
        .agency-image {
            width: 200px;
            height: 200px;
            object-fit: cover;
            border-radius: 8px;
            margin-right: 2rem;
        }
        .agency-info {
            flex: 1;
        }
        .info-item {
            margin-bottom: 1rem;
        }
        .info-label {
            font-weight: 600;
            color: #6c757d;
            display: block;
            margin-bottom: 0.25rem;
        }
        .info-value {
            font-size: 1.1rem;
        }
        .action-buttons {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
        }
        .btn-back {
            background-color: #f8f9fa;
            color: #6c757d;
            border: 1px solid #dee2e6;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: 600;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
        }
        .btn-back:hover {
            background-color: #e9ecef;
            color: #495057;
        }
        .btn-edit {
            background-color: #3498db;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: 600;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
        }
        .btn-edit:hover {
            background-color: #2980b9;
            color: white;
        }
        .btn-delete {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: 600;
            transition: all 0.3s;
        }
        .btn-delete:hover {
            background-color: #c82333;
        }
        @media (max-width: 768px) {
            .agency-card {
                flex-direction: column;
            }
            .agency-image {
                width: 100%;
                margin-right: 0;
                margin-bottom: 1rem;
            }
            .agency-detail-container {
                padding: 1rem;
            }
            .action-buttons {
                flex-direction: column;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="agency-detail-container">
    <div class="detail-header">
        <h1 class="detail-title">
            <i class="fas fa-building me-2"></i>{{ agency.name }}
        </h1>
    </div>

    <div class="agency-card">
        <img src="{{ agency.image ?: 'https://via.placeholder.com/400x200?text=Agence' }}" 
             alt="{{ agency.name }}" 
             class="agency-image">
        
        <div class="agency-info">
            <div class="info-item">
                <span class="info-label"><i class="fas fa-map-marker-alt me-2"></i>Adresse</span>
                <div class="info-value">{{ agency.address }}</div>
            </div>
            
            <div class="info-item">
                <span class="info-label"><i class="fas fa-phone me-2"></i>Téléphone</span>
                <div class="info-value">{{ agency.phone }}</div>
            </div>
            
            <div class="info-item">
                <span class="info-label"><i class="fas fa-envelope me-2"></i>Email</span>
                <div class="info-value">
                    <a href="mailto:{{ agency.email }}">{{ agency.email }}</a>
                </div>
            </div>
        </div>
    </div>

    <div class="action-buttons">
        <a href="{{ path('app_agency_index') }}" class="btn-back">
            <i class="fas fa-arrow-left me-2"></i>Retour à la liste
        </a>
        
        <a href="{{ path('app_agency_edit', {'id': agency.id}) }}" class="btn-edit">
            <i class="fas fa-edit me-2"></i>Modifier
        </a>
        
        {{ include('agency/agent/_delete_form.html.twig', {
            'agency': agency,
            'button_style': 'btn-delete',
            'button_icon': 'fas fa-trash me-2',
            'button_label': 'Supprimer'
        }) }}
    </div>
</div>
{% endblock %}