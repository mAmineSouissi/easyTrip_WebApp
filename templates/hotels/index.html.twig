{% extends 'base.html.twig' %}

{% block title %}Liste des Hôtels{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-hotel me-2"></i>Liste des Hôtels</h1>
        <a href="{{ path('app_hotels_new') }}" class="btn btn-success">
            <i class="fas fa-plus me-1"></i> Nouvel Hôtel
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Nom</th>
                            <th>Adresse</th>
                            <th>Ville</th>
                            <th>Note</th>
                            <th>Prix</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for hotel in hotels %}
                        <tr>
                            <td>{{ hotel.idHotel }}</td>
                            <td>{{ hotel.name }}</td>
                            <td>{{ hotel.adresse }}</td>
                            <td>{{ hotel.city }}</td>
                            <td>
                                {% for i in 1..5 %}
                                    <i class="fas fa-star{{ i > hotel.rating ? '-alt' : '' }} text-warning"></i>
                                {% endfor %}
                            </td>
                            <td>{{ hotel.price}}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_hotels_show', {'id_hotel': hotel.idHotel}) }}" 
                                       class="btn btn-sm btn-primary" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_hotels_edit', {'id_hotel': hotel.idHotel}) }}" 
                                       class="btn btn-sm btn-warning" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    {{ include('hotels/_delete_form.html.twig') }}
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center text-muted">Aucun hôtel trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}