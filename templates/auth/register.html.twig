{% extends 'base.html.twig' %}

{% block title %}Sign Up
{% endblock %}

{% block body %}
	<div class="container shadow-sm p-5 mt-5 mb-5 bg-white rounded">
		<h1 class="my-4 text-center">Sign Up</h1>

		{{ form_start(form) }}

		<div class="mb-3">
			{{ form_label(form.name) }}
			{{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
			{% if form.name.vars.errors|length > 0 %}
				<div class="text-danger small">
					{{ form_errors(form.name) }}
				</div>
			{% endif %}
		</div>

		<div class="mb-3">
			{{ form_label(form.surname) }}
			{{ form_widget(form.surname, { 'attr': {'class': 'form-control'} }) }}
			{% if form.surname.vars.errors|length > 0 %}
				<div class="text-danger small">
					{{ form_errors(form.surname) }}
				</div>
			{% endif %}
		</div>

		<div class="mb-3">
			{{ form_label(form.email) }}
			{{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
			{% if form.email.vars.errors|length > 0 %}
				<div class="text-danger small">
					{{ form_errors(form.email) }}
				</div>
			{% endif %}
		</div>

		<div class="mb-3">
			{{ form_label(form.phone) }}
			{{ form_widget(form.phone, { 'attr': {'class': 'form-control'} }) }}
			{% if form.phone.vars.errors|length > 0 %}
				<div class="text-danger small">
					{{ form_errors(form.phone) }}
				</div>
			{% endif %}
		</div>

		<div class="mb-3">
			{{ form_label(form.addresse) }}
			{{ form_widget(form.addresse, { 'attr': {'class': 'form-control'} }) }}
			{% if form.addresse.vars.errors|length > 0 %}
				<div class="text-danger small">
					{{ form_errors(form.addresse) }}
				</div>
			{% endif %}
		</div>

		<div class="mb-3">
			{{ form_label(form.password) }}
			{{ form_widget(form.password, { 'attr': {'class': 'form-control'} }) }}
			{% if form.password.vars.errors|length > 0 %}
				<div class="text-danger small">
					{{ form_errors(form.password) }}
				</div>
			{% endif %}
		</div>

		<div class="mb-3">
			{{ form_label(form.profilePhoto) }}
			{{ form_widget(form.profilePhoto, { 'attr': {'class': 'form-control'} }) }}
			{% if form.profilePhoto.vars.errors|length > 0 %}
				<div class="text-danger small">
					{{ form_errors(form.profilePhoto) }}
				</div>
			{% endif %}
		</div>

		<div class="mb-3">
			{{ form_label(form.role) }}
			{{ form_widget(form.role, { 'attr': {'class': 'form-control'} }) }}
			{% if form.role.vars.errors|length > 0 %}
				<div class="text-danger small">
					{{ form_errors(form.role) }}
				</div>
			{% endif %}
		</div>

		<button type="submit" class="btn btn-primary">Register</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
