{% extends 'base.html.twig' %}

{% block title %}Edit Ticket #{{ ticket.idTicket }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Edit Ticket #{{ ticket.idTicket }}</h1>

        {% if form is defined and form.vars.errors|length > 0 %}
            <div class="alert alert-danger">
                <ul>
                    {% for error in form.vars.errors %}
                        <li>{{ error.message }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}

        {{ include('tickets/_form.html.twig', {'button_label': 'Update'}) }}
        
        <div class="mt-3">
            <a href="{{ path('app_tickets_index') }}" class="btn btn-secondary">Back to list</a>
            {{ include('tickets/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}