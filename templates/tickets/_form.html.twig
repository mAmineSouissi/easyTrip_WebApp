<div class="container mt-4">
    {{ form_start(form) }}
    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <h3 class="h5 mb-0">
                <i class="fas fa-{{ button_label|default('Save') == 'Update' ? 'edit' : 'plus' }}"></i>
                {{ button_label|default('Créer') }} un Ticket
            </h3>
        </div>
        
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h4 class="h6 text-muted mb-3">Informations de vol</h4>
                    
                    <div class="mb-3">
                        {{ form_label(form.flightNumber, 'Numéro de vol', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.flightNumber, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.airline, 'Compagnie aérienne', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.airline, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.departureCity, 'Ville de départ', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.departureCity, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.arrivalCity, 'Ville d\'arrivée', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.arrivalCity, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <h4 class="h6 text-muted mb-3">Détails du ticket</h4>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.ticketClass, 'Classe', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.ticketClass, {'attr': {'class': 'form-select'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.price, 'Prix (€)', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.imageAirline, 'Logo compagnie', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.imageAirline, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card-footer bg-white">
            <div class="d-flex justify-content-between">
                <a href="{{ path('app_tickets_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-times"></i> Annuler
                </a>
                <button class="btn btn-primary">
                    <i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}
                </button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
</div>