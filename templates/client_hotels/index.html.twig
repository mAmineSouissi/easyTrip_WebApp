{# templates/client_hotels/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nos Hôtels{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">
            <i class="fas fa-hotel me-2"></i>Nos Hôtels
        </h1>
        <p class="lead">Découvrez nos meilleures offres d'hébergement</p>
    </div>

    <!-- Formulaire de recherche -->
    <div class="card shadow mb-5">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="fas fa-search me-2"></i>Rechercher un hôtel
            </h5>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
                <div class="col-md-3">
                    {{ form_row(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Nom de l\'hôtel'}}) }}
                </div>
                <div class="col-md-3">
                    {{ form_row(form.city, {'attr': {'class': 'form-control', 'placeholder': 'Ville'}}) }}
                </div>
                <div class="col-md-2">
                    {{ form_row(form.rating, {'attr': {'class': 'form-select'}}) }}
                </div>
                <div class="col-md-2">
                    {{ form_row(form.maxPrice, {'attr': {'class': 'form-control', 'placeholder': 'Prix max'}}) }}
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search me-1"></i> Rechercher
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>

    <!-- Liste des hôtels -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        {% for hotel in hotels %}
        <div class="col">
            <div class="card h-100 shadow-sm border-0 overflow-hidden">
                {% if hotel.image %}
                <img src="{{ asset('uploads/hotels/' ~ hotel.image) }}" class="card-img-top" alt="{{ hotel.name }}" style="height: 200px; object-fit: cover;">
                {% else %}
                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                    <i class="fas fa-hotel fa-4x text-muted"></i>
                </div>
                {% endif %}
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="card-title mb-0">{{ hotel.name }}</h5>
                        <span class="badge bg-primary rounded-pill">{{ hotel.price }} €/nuit</span>
                    </div>
                    <p class="text-muted small mb-2">
                        <i class="fas fa-map-marker-alt me-1"></i>{{ hotel.city }}
                    </p>
                    <div class="mb-3">
                        {% for i in 1..5 %}
                            <i class="fas fa-star{{ i > hotel.rating ? '-alt' : '' }} {{ i <= hotel.rating ? 'text-warning' : 'text-muted' }}"></i>
                        {% endfor %}
                        <span class="ms-1 small">({{ hotel.rating }}/5)</span>
                    </div>
                    <p class="card-text text-truncate">{{ hotel.description }}</p>
                </div>
                <div class="card-footer bg-white border-0 d-flex justify-content-between">
                    <a href="{{ path('app_client_hotels_show', {'id_hotel': hotel.idHotel}) }}" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-eye me-1"></i> Voir détails
                    </a>
                    <a href="{{ path('app_client_hotels_show', {'id_hotel': hotel.idHotel}) }}#reservation" class="btn btn-sm btn-primary">
                        <i class="fas fa-calendar-check me-1"></i> Réserver
                    </a>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-12">
            <div class="alert alert-info text-center py-4">
                <i class="fas fa-info-circle fa-2x mb-3"></i>
                <h4>Aucun hôtel trouvé</h4>
                <p class="mb-0">Ajustez vos critères de recherche ou revenez plus tard</p>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}