{% extends 'admin/base.html.twig' %}

{% block title %}Liste des Promotions{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <style>
        .promotion-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 2rem;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #eee;
        }
        .page-title {
            color: #2c3e50;
            font-weight: 700;
            margin: 0;
        }
        .btn-create {
            background-color: #2dce89;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-weight: 600;
            transition: all 0.3s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
        }
        .btn-create:hover {
            background-color: #24b47e;
            transform: translateY(-2px);
        }
        .promotion-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
        }
        .promotion-card {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 20px;
            transition: all 0.3s;
        }
        .promotion-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .promotion-title {
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 10px;
        }
        .promotion-discount {
            font-size: 1.5rem;
            font-weight: 700;
            color: #28a745;
            margin-bottom: 10px;
        }
        .promotion-date {
            font-size: 0.9rem;
            color: #6c757d;
        }
        .badge-expired {
            background-color: #dc3545;
            color: white;
            padding: 3px 8px;
            border-radius: 10px;
            font-size: 0.8rem;
        }
        .badge-active {
            background-color: #28a745;
            color: white;
            padding: 3px 8px;
            border-radius: 10px;
            font-size: 0.8rem;
        }
        .action-buttons {
            margin-top: 15px;
            display: flex;
            gap: 10px;
        }
        .action-buttons .btn {
            padding: 5px 10px;
            font-size: 0.85rem;
        }
        .no-promotions {
            text-align: center;
            padding: 2rem;
            color: #7f8c8d;
        }
        .filter-section {
            background: #f8f9fa;
            padding: 1.5rem;
            border-radius: 8px;
            margin-bottom: 2rem;
        }
        .filter-group {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            margin-bottom: 1rem;
        }
        .filter-item {
            flex: 1;
            min-width: 200px;
        }
        .date-picker-container {
            position: relative;
            display: inline-block;
        }
        .date-input {
            padding: 10px 35px 10px 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
            width: 200px;
        }
        .calendar-icon {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #6c757d;
        }
        .navigation {
            display: flex;
            justify-content: center;
            margin-top: 2rem;
        }
        .pagination {
            display: flex;
            list-style: none;
            padding: 0;
            gap: 5px;
        }
        .page-item {
            margin: 0 3px;
        }
        .page-link {
            padding: 8px 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            color: #2c3e50;
            text-decoration: none;
            transition: all 0.3s;
        }
        .page-link:hover {
            background-color: #f8f9fa;
        }
        .page-item.active .page-link {
            background-color: #2dce89;
            border-color: #2dce89;
            color: white;
        }
        .page-item.disabled .page-link {
            color: #6c757d;
            pointer-events: none;
        }
    </style>
{% endblock %}

{% block body %}
<div class="promotion-container">
    <div class="page-header">
        <h1 class="page-title">
            <i class="fas fa-percentage"></i> Liste des Promotions
            <span class="badge badge-primary">{{ promotions.getTotalItemCount }}</span>
        </h1>
        <a href="{{ path('app_promotion_new') }}" class="btn-create">
            <i class="fas fa-plus"></i> Nouvelle Promotion
        </a>
    </div>

    <div class="filter-section">
        <h3><i class="fas fa-filter"></i> Filtres</h3>
        
        <div class="filter-group">
            <div class="filter-item">
                <label for="search-name">Recherche par nom:</label>
                <input type="text" id="search-name" class="form-control" placeholder="Nom de la promotion">
            </div>
            
            <div class="filter-item">
                <label for="discount-range">Pourcentage de réduction:</label>
                <select id="discount-range" class="form-control">
                    <option value="all">Tous</option>
                    <option value="0-10">0-10%</option>
                    <option value="11-20">11-20%</option>
                    <option value="21-30">21-30%</option>
                    <option value="31-100">31% et plus</option>
                </select>
            </div>
            
            <div class="filter-item">
                <label>Filtrer par date:</label>
                <div class="date-picker-container">
                    <input type="text" id="date-filter" class="date-input" placeholder="Choisir une date" readonly>
                    <i class="fas fa-calendar-alt calendar-icon" id="calendar-icon"></i>
                </div>
            </div>
        </div>
    </div>

    <div id="promotions-container">
        {% if promotions|length > 0 %}
            <div class="promotion-grid">
                {% for promotion in promotions %}
                    <div class="promotion-card" 
                         data-name="{{ promotion.title|lower }}" 
                         data-discount="{{ promotion.discountPercentage }}" 
                         data-end-date="{{ promotion.validUntil|date('Y-m-d') }}">
                        <div class="d-flex justify-content-between align-items-start">
                            <h3 class="promotion-title">{{ promotion.title }}</h3>
                            <span class="{{ promotion.validUntil >= date() ? 'badge-active' : 'badge-expired' }}">
                                {{ promotion.validUntil >= date() ? 'Active' : 'Expirée' }}
                            </span>
                        </div>
                        <div class="promotion-discount">
                            -{{ promotion.discountPercentage }}%
                        </div>
                        <p class="promotion-date">
                            <i class="fas fa-calendar-alt"></i> Valide jusqu'au {{ promotion.validUntil|date('d/m/Y') }}
                        </p>
                        <div class="action-buttons">
                            <a href="{{ path('app_promotion_show', {'id': promotion.id}) }}" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-eye"></i> Voir
                            </a>
                            <a href="{{ path('app_promotion_edit', {'id': promotion.id}) }}" class="btn btn-sm btn-outline-secondary">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            <form method="post" action="{{ path('app_promotion_delete', {'id': promotion.id}) }}" style="display: inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ promotion.id) }}">
                                <button class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Supprimer</button>
                            </form>
                        </div>
                    </div>
                {% endfor %}
            </div>
            
            <div class="navigation">
                {{ knp_pagination_render(promotions) }}
            </div>
        {% else %}
            <div class="no-promotions">
                <i class="fas fa-percentage fa-3x mb-3" style="color: #ecf0f1;"></i>
                <h3>Aucune promotion enregistrée</h3>
                <p>Commencez par créer une nouvelle promotion</p>
                <a href="{{ path('app_promotion_new') }}" class="btn-create">
                    <i class="fas fa-plus"></i> Créer une promotion
                </a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/fr.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialiser le calendrier
            const datePicker = flatpickr("#date-filter", {
                locale: "fr",
                dateFormat: "Y-m-d",
                allowInput: false,
                clickOpens: false,
                onChange: function(selectedDates, dateStr) {
                    applyFilters();
                }
            });

            // Ouvrir le calendrier au clic sur l'icône
            document.getElementById("calendar-icon").addEventListener("click", function() {
                datePicker.open();
            });

            // Éléments du DOM
            const searchInput = document.getElementById('search-name');
            const discountSelect = document.getElementById('discount-range');
            const promotionCards = document.querySelectorAll('.promotion-card');

            // Fonction de filtrage
            function applyFilters() {
                const searchTerm = searchInput.value.toLowerCase();
                const discountRange = discountSelect.value;
                const selectedDate = datePicker.selectedDates[0] 
                    ? datePicker.formatDate(datePicker.selectedDates[0], 'Y-m-d') 
                    : null;

                let visibleCount = 0;

                promotionCards.forEach(card => {
                    const name = card.dataset.name;
                    const discount = parseFloat(card.dataset.discount);
                    const endDate = card.dataset.endDate;

                    // Vérification des filtres
                    const nameMatch = name.includes(searchTerm);
                    
                    let discountMatch = true;
                    if (discountRange !== 'all') {
                        const [min, max] = discountRange.split('-').map(Number);
                        discountMatch = discount >= min && discount <= max;
                    }
                    
                    let dateMatch = true;
                    if (selectedDate) {
                        dateMatch = endDate >= selectedDate;
                    }

                    // Appliquer les filtres
                    if (nameMatch && discountMatch && dateMatch) {
                        card.style.display = 'block';
                        visibleCount++;
                    } else {
                        card.style.display = 'none';
                    }
                });

                // Mettre à jour le compteur
                document.querySelector('.badge-primary').textContent = visibleCount;

                // Gérer l'affichage quand aucun résultat
                const container = document.getElementById('promotions-container');
                if (visibleCount === 0) {
                    const noResults = document.createElement('div');
                    noResults.className = 'no-promotions';
                    noResults.innerHTML = `
                        <i class="fas fa-percentage fa-3x mb-3" style="color: #ecf0f1;"></i>
                        <h3>Aucune promotion trouvée</h3>
                        <p>Aucune promotion ne correspond à vos critères de recherche</p>
                        <a href="{{ path('app_promotion_new') }}" class="btn-create">
                            <i class="fas fa-plus"></i> Créer une promotion
                        </a>
                    `;
                    
                    // Supprimer l'ancien message si existe
                    const existingMessage = container.querySelector('.no-promotions');
                    if (existingMessage) {
                        existingMessage.remove();
                    }
                    
                    container.appendChild(noResults);
                } else {
                    // Supprimer le message d'absence de résultats si des cartes sont visibles
                    const noResults = container.querySelector('.no-promotions');
                    if (noResults) {
                        noResults.remove();
                    }
                }
            }

            // Écouteurs d'événements
            searchInput.addEventListener('input', applyFilters);
            discountSelect.addEventListener('change', applyFilters);
        });
    </script>
{% endblock %}