{% extends 'base.html.twig' %}

{% block title %}
    {% if editMode %}
        Modifier une voiture
    {% else %}
        Ajouter une voiture
    {% endif %}
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>
            {% if editMode %}
                Modifier une voiture
            {% else %}
                Ajouter une voiture
            {% endif %}
        </h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.model, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Ex: BMW Serie 3'
                            }
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.seats, {
                            'attr': {
                                'class': 'form-control',
                                'min': '2',
                                'max': '8'
                            }
                        }) }}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">
                        {{ form_row(form.location, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Ex: Paris'
                            }
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.pricePerDay, {
                            'attr': {
                                'class': 'form-control',
                                'min': '0',
                                'step': '0.01'
                            }
                        }) }}
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">
                        {{ form_row(form.image, {
                            'attr': {
                                'class': 'form-control'
                            }
                        }) }}
                    </div>
                    <div class="col-md-6 d-flex align-items-end">
                        <div class="form-check form-switch">
                            {{ form_widget(form.availability, {
                                'attr': {
                                    'class': 'form-check-input'
                                }
                            }) }}
                            {{ form_label(form.availability, null, {
                                'label_attr': {
                                    'class': 'form-check-label'
                                }
                            }) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-primary">
                {% if editMode %}
                    Modifier
                {% else %}
                    Ajouter
                {% endif %}
            </button>
            <a href="{{ path('admin_cars') }}" class="btn btn-secondary">Annuler</a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form.needs-validation');
    
    form.addEventListener('submit', function(event) {
        if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
        }
        
        form.classList.add('was-validated');
    });

    // Validation personnalisée pour le prix
    const priceInput = document.querySelector('#car_pricePerDay');
    priceInput.addEventListener('input', function() {
        const price = parseFloat(this.value);
        if (isNaN(price) || price <= 0) {
            this.setCustomValidity('Le prix doit être supérieur à 0');
        } else {
            this.setCustomValidity('');
        }
    });

    // Validation personnalisée pour le nombre de places
    const seatsInput = document.querySelector('#car_seats');
    seatsInput.addEventListener('input', function() {
        const seats = parseInt(this.value);
        if (isNaN(seats) || seats < 2 || seats > 8) {
            this.setCustomValidity('Le nombre de places doit être entre 2 et 8');
        } else {
            this.setCustomValidity('');
        }
    });
});
</script>
{% endblock %}
